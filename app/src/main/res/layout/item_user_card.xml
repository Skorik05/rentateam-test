<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_list_row"
    android:paddingHorizontal="16dp"
    android:paddingVertical="18dp"
    >
    <TextView
        android:id="@+id/tvUseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        android:fontFamily="@font/gilroy_regular"
        android:textAlignment="textStart"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#131619"
        />
    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvUseId"
        app:layout_constraintBottom_toBottomOf="@id/tvUseId"
        app:layout_constraintStart_toEndOf="@id/tvUseId"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:text="Серге"
        android:fontFamily="@font/gilroy_semibold"
        android:textAlignment="textStart"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#131619"
        />
</androidx.constraintlayout.widget.ConstraintLayout>